generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  CONTRIBUTOR
  READER
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

model User {
  id           String   @id @default(uuid())
  name         String?
  email        String   @unique
  passwordHash String
  role         Role     @default(READER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  posts        Post[]
}

model Post {
  id          String     @id @default(uuid())
  title       String
  slug        String     @unique
  excerpt     String?
  content     String
  coverImage  String?
  status      PostStatus @default(DRAFT)

  authorId    String
  author      User       @relation(fields: [authorId], references: [id])


  publishedAt DateTime?
  deletedAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  @@index([deletedAt])
  @@index([status, publishedAt])
  @@index([authorId])
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())
}

